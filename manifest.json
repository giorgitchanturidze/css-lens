{
    "manifest_version": 3,
    "name": "CSS Lens",
    "version": "1.0",
    "description": "Highlights page elements with outlines and backgrounds.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "128": "icons/icon-off.png"
        },
        "default_title": "Toggle CSS Lens"
    },
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}